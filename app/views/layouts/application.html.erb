    <!-- Bootstrap JS (–µ—Å–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–µ—à—å Bootstrap –∫–æ–º–ø–æ–Ω–µ–Ω—Ç—ã) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- JavaScript –¥–ª—è —Ñ–∏—á–∏ #3 -->
    <script>
      // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –æ—Ü–µ–Ω–∫–∏ –∏–≥—Ä—ã
      function rateGame(gameId, score) {
        fetch(`/games/${gameId}/rate`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
          },
          body: JSON.stringify({ score: score })
        })
        .then(response => response.json())
        .then(data => {
          if (data.average_rating) {
            // –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ —Ä–µ–π—Ç–∏–Ω–≥–∞
            const ratingElement = document.querySelector(`#game-${gameId}-rating`);
            if (ratingElement) {
              ratingElement.textContent = `–†–µ–π—Ç–∏–Ω–≥: ${data.average_rating}/10 (${data.rating_count} –æ—Ü–µ–Ω–æ–∫)`;
            }
            
            // –ü–æ–¥—Å–≤–µ—á–∏–≤–∞–µ–º –≤—ã–±—Ä–∞–Ω–Ω—ã–µ –∑–≤—ë–∑–¥—ã
            const stars = document.querySelectorAll(`#game-${gameId}-stars .bi-star`);
            stars.forEach((star, index) => {
              if (index < score) {
                star.classList.remove('bi-star');
                star.classList.add('bi-star-fill');
              } else {
                star.classList.remove('bi-star-fill');
                star.classList.add('bi-star');
              }
            });
            
            alert('–í–∞—à–∞ –æ—Ü–µ–Ω–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞!');
          } else if (data.errors) {
            alert('–û—à–∏–±–∫–∞: ' + data.errors.join(', '));
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏ –æ—Ü–µ–Ω–∫–∏');
        });
      }
      
      // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ª–∞–π–∫–∞ —Ä–µ—Ü–µ–Ω–∑–∏–∏
      function toggleLike(reviewId, gameId) {
        const likeBtn = document.querySelector(`#like-btn-${reviewId}`);
        const likeCount = document.querySelector(`#like-count-${reviewId}`);
        
        if (likeBtn.classList.contains('liked')) {
          // –£–¥–∞–ª—è–µ–º –ª–∞–π–∫
          fetch(`/games/${gameId}/reviews/${reviewId}/likes/${likeBtn.dataset.likeId}`, {
            method: 'DELETE',
            headers: {
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
            }
          })
          .then(response => response.json())
          .then(data => {
            likeBtn.classList.remove('liked');
            likeBtn.innerHTML = '<i class="bi bi-heart"></i>';
            likeCount.textContent = data.likes_count;
          });
        } else {
          // –°—Ç–∞–≤–∏–º –ª–∞–π–∫
          fetch(`/games/${gameId}/reviews/${reviewId}/likes`, {
            method: 'POST',
            headers: {
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
            }
          })
          .then(response => response.json())
          .then(data => {
            likeBtn.classList.add('liked');
            likeBtn.innerHTML = '<i class="bi bi-heart-fill"></i>';
            likeCount.textContent = data.likes_count;
          });
        }
      }
      
      // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏—è
      function submitComment(reviewId, gameId) {
        const form = document.querySelector(`#comment-form-${reviewId}`);
        const content = form.querySelector('textarea').value;
        
        if (!content.trim()) {
          alert('–í–≤–µ–¥–∏—Ç–µ —Ç–µ–∫—Å—Ç –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏—è');
          return;
        }
        
        fetch(`/reviews/${reviewId}/comments`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
          },
          body: JSON.stringify({ comment: { content: content } })
        })
        .then(response => response.json())
        .then(data => {
          if (data.id) {
            // –î–æ–±–∞–≤–ª—è–µ–º –Ω–æ–≤—ã–π –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π –≤ —Å–ø–∏—Å–æ–∫
            const commentsList = document.querySelector(`#comments-list-${reviewId}`);
            const newComment = document.createElement('div');
            newComment.className = 'comment-card';
            newComment.innerHTML = `
              <strong>${data.user_email || '–í—ã'}</strong>
              <small>—Ç–æ–ª—å–∫–æ —á—Ç–æ</small>
              <p>${data.content}</p>
            `;
            commentsList.appendChild(newComment);
            
            // –û—á–∏—â–∞–µ–º —Ñ–æ—Ä–º—É
            form.querySelector('textarea').value = '';
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å—á—ë—Ç—á–∏–∫ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–µ–≤
            const commentCount = document.querySelector(`#comment-count-${reviewId}`);
            if (commentCount) {
              commentCount.textContent = parseInt(commentCount.textContent) + 1;
            }
          } else if (data.errors) {
            alert('–û—à–∏–±–∫–∞: ' + data.errors.join(', '));
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏—è');
        });
      }
