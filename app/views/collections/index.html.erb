<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Мои коллекции</h1>
    <%= link_to "Новая коллекция", new_collection_path, class: "btn btn-primary" %>
  </div>
  
  <!-- Статистика -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="card-title"><%= @collections.count %></h3>
          <p class="card-text">Коллекций</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="card-title"><%= @total_games %></h3>
          <p class="card-text">Всего игр</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="card-title">
            <%= @collections.sum { |c| c.games.where("release_date <= ?", Date.today).count } %>
          </h3>
          <p class="card-text">Вышедших игр</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="card-title">
            <%= @collections.sum { |c| c.games.where("metacritic_score >= ?", 80).count } %>
          </h3>
          <p class="card-text">С оценкой 80+</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Список коллекций -->
  <% if @collections.any? %>
    <div class="row">
      <% @collections.each do |collection| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">
                <%= collection.name %>
                <span class="badge bg-secondary"><%= collection.games.count %></span>
              </h5>
              
              <% if collection.description.present? %>
                <p class="card-text text-muted">
                  <%= collection.description.truncate(100) %>
                </p>
              <% end %>
              
              <!-- Последние 3 игры -->
              <% if collection.games.any? %>
                <div class="mt-3">
                  <h6>Последние игры:</h6>
                  <div class="d-flex flex-wrap gap-2">
                    <% collection.games.last(3).each do |game| %>
                      <span class="badge bg-info">
                        <%= game.title.truncate(15) %>
                      </span>
                    <% end %>
                    <% if collection.games.count > 3 %>
                      <span class="badge bg-secondary">
                        +<%= collection.games.count - 3 %> ещё
                      </span>
                    <% end %>
                  </div>
                </div>
              <% else %>
                <p class="text-muted mt-3">
                  <em>Пока нет игр в коллекции</em>
                </p>
              <% end %>
            </div>
            
            <div class="card-footer bg-transparent">
              <div class="d-flex justify-content-between">
                <%= link_to "Просмотреть", collection_path(collection), class: "btn btn-sm btn-primary" %>
                <div>
                  <%= link_to "Изменить", edit_collection_path(collection), class: "btn btn-sm btn-outline-secondary me-1" %>
                  <%= link_to "Удалить", 
                        collection_path(collection), 
                        method: :delete,
                        data: { confirm: "Удалить коллекцию '#{collection.name}'?" },
                        class: "btn btn-sm btn-outline-danger" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="bi bi-collection display-1 text-muted"></i>
      </div>
      <h3 class="text-muted">У вас пока нет коллекций</h3>
      <p class="text-muted mb-4">
        Создайте свою первую коллекцию для организации игр
      </p>
      <%= link_to "Создать коллекцию", new_collection_path, class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>